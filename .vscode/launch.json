{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ByteLocker Debug Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bytelocker",
            "args": [
                "-encrypt",
                "tests/test1.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Suppress startup banner",
                    "text": "set startup-with-shell off",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build for Linux",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false
            }
        },
        {
            "name": "ByteLocker Debug Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bytelocker.exe",
            "args": [
                "-encrypt",
                "tests/test1.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Build for Windows"
        }
    ]
}